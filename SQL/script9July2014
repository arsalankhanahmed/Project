--	INNER JOIN DBO.Split(@LocationIds, ',' ) Loc ON ( Loc.Data = csa.LocationId OR @LocationIds = '')
--	INNER JOIN DBO.Split(@MainAreaIds, ',' ) MainArea ON ( MainArea.Data = sa.MainAreaId OR @MainAreaIds = '')
