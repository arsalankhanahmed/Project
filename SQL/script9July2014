DECLARE @FromDate DATETIME, @ToDate DATETIME
SET @FromDate = '2009-12-26 00:00:00.000'--'2013-11-01 00:00:00'
SET @ToDate = '2011-01-01 23:59:59.000'

--/*NO CRITERIA*/
