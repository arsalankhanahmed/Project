FROM SLN sln 
  INNER JOIN SLNProduct slnp  on sln.locationid= slnp.LocationId AND sln.SLNID= slnp.SLNID
  --INNER JOIN SaleOrderTax sot ON sln.LocationId = sot.LocationId AND sln.SaleOrderId = slnp.SaleOrderId
