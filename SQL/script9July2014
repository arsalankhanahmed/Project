--	INNER JOIN DBO.Split(@SubAreaIds, ',' )  SubArea  ON ( SubArea.Data = csa.SubAreaId   OR @SubAreaIds = '' )


--	WHERE SO.IsRollbacked = 0 AND  so.CustomerToBeOpenedSubAreaId IS NULL AND 
