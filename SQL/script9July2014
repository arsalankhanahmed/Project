on so.locationid= sos.locationid and sos.saleorderid = so.saleorderid
INNER JOIN SCHEME s ON sos.schemeId = s.schemeId   
WHERE so.locationid = 14 AND so.deliverychallanId =251--IN (88,158,251,255)

