	@MainAreaIds varchar(MAX),  
	@SubAreaIds varchar(MAX),  
	@CustomerIds varchar(MAX),  
	@ProductIds varchar(MAX),  	
	@BatchNo varchar(50), 
	@SelectAll int,
	@FromDate datetime, 
	@ToDate datetime,   	   
	@IsCash bit,
	@IsCredit bit,
	@CustStatus int ,
	@MAreaStatus INT,
	@SAreaStatus INT,
	@BookerStatus INT,
	@SupplierStatus INT,
    @IsinvoiceDate BIT,
    @PBLWise BIT
AS 

